<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">


    <com.raed.drawingview.DrawingView
        android:id="@+id/draw_digits"
        android:layout_margin="10dp"
        android:layout_width="362dp"
        android:layout_height="360dp"
        app:brush="pencil"
        app:brush_size="1"
        app:brush_color="#2187bb"
        app:drawing_background_color="#dddddd"
        />

    <Button
        android:id="@+id/one"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="63dp"
        android:text="1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="386dp" />

    <Button
        android:id="@+id/two"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/one"
        android:layout_marginStart="83dp"
        android:text="2"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="386dp" />

    <Button
        android:id="@+id/three"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/one"
        android:layout_centerHorizontal="true"
        android:text="3"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="386dp" />

    <Button
        android:id="@+id/four"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/one"
        android:layout_marginEnd="97dp"
        android:text="4"
        tools:layout_editor_absoluteX="248dp"
        tools:layout_editor_absoluteY="386dp" />

    <Button
        android:id="@+id/five"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/one"
        android:layout_marginEnd="31dp"
        android:text="5" />

    <Button
        android:id="@+id/six"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/one"
        android:layout_marginTop="-63dp"
        android:text="6" />

    <Button
        android:id="@+id/seven"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/two"
        android:layout_below="@+id/one"
        android:layout_marginTop="-63dp"
        android:text="7" />


    <Button
        android:id="@+id/eight"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/one"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-63dp"
        android:text="8" />

    <Button
        android:id="@+id/nine"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/four"
        android:layout_below="@+id/one"
        android:layout_marginTop="-63dp"
        android:text="9" />

    <Button
        android:id="@+id/zero"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/five"
        android:layout_below="@+id/one"
        android:layout_marginTop="-63dp"
        android:text="0" />
</RelativeLayout>